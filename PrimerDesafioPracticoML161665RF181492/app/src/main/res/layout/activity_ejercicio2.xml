<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".Ejercicio2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elecciones"
        android:drawableLeft="@drawable/ic_baseline_assured_workload_24"
        android:textColor="@color/primary_text"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/TextViewEmployee1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Ingrese las votaciones"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_baseline_analytics_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tittleTextView2" />

    <EditText
        android:id="@+id/edtiTextValores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej: 2,3,2,1,3"
        android:textSize="25dp"
        android:textColorHint="@color/secondary_text"
        android:layout_marginBottom="30dp"
        android:paddingLeft="20dp"
        android:inputType="text"
        />


    <Button
        android:id="@+id/btncalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:onClick="calcular"
        android:text="Calcular"
        android:backgroundTint="@color/primary_dark"
        android:drawableRight="@drawable/ic_baseline_calculate_24"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textSize="20sp"
        />





</LinearLayout>